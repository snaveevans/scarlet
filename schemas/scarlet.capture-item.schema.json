{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/scarlet.capture-item.schema.json",
  "title": "Scarlet Capture Item",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "createdAt", "rawText", "classification"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 8,
      "description": "Stable unique id (uuid recommended)."
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the thought was captured."
    },
    "rawText": {
      "type": "string",
      "minLength": 1,
      "description": "Original user input."
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "type": "string", "enum": ["cli", "api", "import", "other"] },
        "device": { "type": "string" },
        "app": { "type": "string" }
      }
    },
    "classification": {
      "type": "object",
      "additionalProperties": false,
      "required": ["bucket", "confidence"],
      "properties": {
        "bucket": {
          "type": "string",
          "enum": ["people", "idea", "project", "admin"]
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "nowNextNever": {
          "type": "string",
          "enum": ["now", "next", "never"]
        },
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 25
        }
      }
    },
    "links": {
      "type": "array",
      "items": { "type": "string", "format": "uri" },
      "maxItems": 25
    },
    "refs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "projectId": { "type": "string" },
        "personId": { "type": "string" }
      }
    }
  }
}
